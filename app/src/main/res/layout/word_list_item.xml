<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp" >
            <TextView
                android:id="@+id/info_text"
                android:layout_alignParentStart="true"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/words_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/words_delete_but"
                android:layout_marginEnd="15dp"/>

            <ImageView
                android:id="@+id/words_delete_but"
                android:contentDescription="@string/image_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/words_nfc_but"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_delete_black_24dp"/>

            <ImageView
                android:id="@+id/words_nfc_but"
                android:contentDescription="@string/image_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/words_edit_but"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_nfc_black_24dp"/>

            <ImageView
                android:id="@+id/words_edit_but"
                android:contentDescription="@string/image_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_edit_black_24dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>